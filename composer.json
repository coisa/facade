{
    "name": "coisa/facade",
    "type": "library",
    "description": "Facade Abstraction Layer",
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe Say√£o Lobato Abreu",
            "email": "github@mentor.dev.br"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "coisa/factory": "^1.7 || ^2.0",
        "coisa/singleton": "^1.1 || ^2.0",
        "mockery/mockery": "^1.5"
    },
    "require-dev": {
        "coisa/php-cs-fixer": "^2.1",
        "jangregor/phpstan-prophecy": "^1.0",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^9.5",
        "sensiolabs/security-checker": "^6.0",
        "spatie/phpunit-watcher": "^1.23",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/var-dumper": "^5.4"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "prefer-stable": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-1.x": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "CoiSA\\Facade\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoiSA\\Facade\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "analyse": "phpstan analyse",
        "check": [
            "@lint",
            "@test",
            "@sniff",
            "@cs-check",
            "@analyse"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "lint": "parallel-lint --exclude vendor .",
        "sniff": "phpcs --ignore=vendor/ . --standard=PSR12",
        "test": "phpunit --color=always --testdox"
    }
}
